<% if !user_signed_in? #if user is not signed in redner this %>
    <style>
        body {
            background:linear-gradient(/* somewhat transparent film on the bg so that white text is okay */
                rgba(0,0,0,0.7),
                rgba(0,0,0,0.7)
                ), url("/bg.jpg") no-repeat center center fixed; /* only display once, center horizontal and vertical, dont let scroll change position*/

            -webkit-background-size: cover; /* All browsers will recognize that the size of this background is to cover the entire page*/
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
        }
        h1 {
            color: white;
            font-weight: bold;
        }
        .container-index{
            margin-right: 15%;
            margin-left: 15%;
        }
        .text{ /*all of text class will have these properties */
            color: white;
            font-weight: 300;
            font-size: 150%;
        }
        .footer-links{
            text-align: center;
            color: white;
            margin-top: 30%;
            font-size: 75%;
        }
        .log-in {
            float: right;
            width: 300px;
            height: 150px;
            margin-top: 7.5%;
        }
        .sign-up{
            float: right;
            width: 300px;
            height: 250px;
        }
    </style>

    <div class="container-index row">
        <div class="col-sm-6">
            <h1>Welcome to Flutter.</h1>        
            <p class="text">
                Connect with your buddies. Chat with new friends. Have special adventures with your buddies. <br>
                このサイトで他の人とブッカケすることができます。
            </p>            
        </div>

        <div class="col-sm-6">
            <div class="log-in panel">
                LOG IN
            </div>
            
            <div class="sign-up panel">
                SIGN UP
            </div>
        </div>
        
        <div class="col-sm-12">
            <p class="footer-links">About  Help  Center  Blog  Status  Jobs  Terms  Privacy Policy  Cookies  Ads Info  Brand  Advertise  Businesses  Developers  Directory  Settings  © 2017 Flutter</p>    
        </div>
        
    </div>


<% else #if the user IS signed in redner the following %>

<script> document.location = "/home"</script>

<% end %>